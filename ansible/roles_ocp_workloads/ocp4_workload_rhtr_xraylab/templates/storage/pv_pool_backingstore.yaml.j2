apiVersion: noobaa.io/v1alpha1
kind: BackingStore
metadata:
  finalizers:
  - noobaa.io/finalizer
  labels:
    app: noobaa
  name: mcg-pv-pool-bs
  namespace: {{ ocp4_workload_rhtr_xraylab_ocs_namespace }}
spec:
  pvPool:
    numVolumes: {{ ocp4_workload_rhtr_xraylab_ocs_mcg_pv_pool_pv_quantity }}
    resources:
      requests:
        storage: {{ ocp4_workload_rhtr_xraylab_ocs_mcg_pv_pool_pv_size }}
    storageClass: {{ ocp4_workload_rhtr_xraylab_ocs_mcg_pv_pool_pv_storageclass }}
  type: pv-pool
